{
	"compilerOptions": {
		"outDir": "build",
		"sourceMap": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"strict": true,
		"noImplicitAny": false,
		"strictPropertyInitialization": false,
		"module": "commonjs",
		"target": "es2017",
		"rootDir": "src",
		"lib": ["es2017", "dom"],
		"baseUrl": "src",
		"paths": {
			// Aliases for imports
			"@app/*": ["app/*"],
			"@controllers/*": ["app/controllers/*"],
			"@dto/*": ["app/dto/*"],
			"@entities/*": ["app/entities/*"],
			"@hooks/*": ["app/hooks/*"],
			"@keys/*": ["app/keys/*"],
			"@schemas/*": ["app/schemas/*"],
			"@services/*": ["app/services/*"],
		}
	},
	"include": ["src/**/*.ts"]
}
